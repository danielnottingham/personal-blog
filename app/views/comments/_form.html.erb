<%= simple_form_for [commentable, Comment.new], local: true, html: { class: local_assigns[:class], data: { target: local_assigns[:target] } } do |f| %>
  <div class="form-group mb-2">
    <%= f.input :body, as: :text, placeholder: "Add a comment", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input_field :parent_id, as: :hidden, value: local_assigns[:parent_id] %>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
