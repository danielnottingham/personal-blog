<p id="notice"><%= notice %></p>

<div>
  <div class="row">
    <div class="col-3">
      <div class="card card border-secondary">
        <div class="card-header">
          <%= current_user.full_name %>
        </div>
        <div class="card-body">
          <strong><span>Articles published:</span></strong> <%= current_user.articles.count %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <h1>Articles</h1>

      <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
      <% @articles.each do |article| %>
        <div class="card card border-secondary mt-3 mb-3" style="width: 70rem;">
          <div class="card-header">
            <h3><%= link_to article.title, article %></h3>
          </div>
          <div class="card-body">
            <%= truncate(strip_tags(article.body.to_s), length: 200, omission: "...")  %>
            <br><br>
            <strong><%= article.user.full_name %></strong> ( <%= article.updated_at.strftime("%M:%H - %d/%m/%Y") %> )
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>